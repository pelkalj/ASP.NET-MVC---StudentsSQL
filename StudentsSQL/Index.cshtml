@model IEnumerable<Students.Models.Student_Pelka>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of Students</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm())
    {
        <b>Search By: </b>
        @Html.RadioButton("search by", "Name") <text>Name</text><br />
        @Html.TextBox("search") <input type="submit" value="Search" />
    }
</p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prezime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datum_rodjenja)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Datum_rodjenja)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID_studenta }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID_studenta }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID_studenta })
                </td>
            </tr>
        }

    </table>
